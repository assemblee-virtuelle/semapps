    "array-callback-return": "warn",
    "arrow-body-style": "off",
    "camelcase": "warn",
    "class-methods-use-this": "warn",
    "consistent-return": "warn",
    "default-case": "warn",
    "dot-notation": "warn",
    "eqeqeq": "warn",
    "guard-for-in": "warn",
